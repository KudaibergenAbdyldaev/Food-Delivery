<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_basket"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:elevation="2dp"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/close_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_alignParentRight="true"/>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/img_basket"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/delivery"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_basket"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="100"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_basket"
            android:layout_below="@+id/title_basket"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="сом"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/price_basket"
            android:layout_below="@+id/title_basket"
            android:textColor="#000000"
            android:textSize="20sp" />
        <RelativeLayout
            android:id="@+id/count"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_add_bg"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-"
                android:textColor="#fff"
                android:layout_marginRight="10dp"
                android:textSize="24sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_toLeftOf="@+id/txt_count"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="#fff"
                android:clickable="true"
                android:textSize="24sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txt_count"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>