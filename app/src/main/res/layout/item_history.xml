<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_basket"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:elevation="2dp"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/img_basket"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/delivery"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_basket"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="100"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_basket"
            android:layout_below="@+id/title_basket"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="сом"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/price_basket"
            android:layout_below="@+id/title_basket"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>